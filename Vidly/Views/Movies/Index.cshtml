@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@Html.ActionLink("NEW MOVIE", "New", null, new { @class="btn btn-default", role="button" } )


@if (!Model.Any())
{
    <text>There are no movies to show</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Detail", new { id = movie.Id })</td>
                    <td>@movie.MovieGenre.Genre</td>
                </tr>
            }
        </tbody>
    </table>
}