@model Vidly.Models.Movie

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <h4>Movie Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Genre</dt>
        <dd>@Model.MovieGenre.Genre</dd>

        <dt>Release Date</dt>
        <dd>@Model.ReleaseDate.ToLongDateString()</dd>

        <dt>Date Added</dt>
        <dd>@Model.DateAdded.ToLongDateString()</dd>

        <dt>Number in Stock</dt>
        <dd>@Model.NumberInStock</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")   &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
</p>
